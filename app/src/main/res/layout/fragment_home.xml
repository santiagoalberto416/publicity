<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">

    <android.support.v4.view.ViewPager
        android:id="@+id/banner_menu_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom_container"
        android:background="@android:color/transparent" />

    <LinearLayout
        android:id="@+id/bottom_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:elevation="5dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/toolbar_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/notification_bar_container"
            android:baselineAligned="false"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:weightSum="1">

            <LinearLayout
                android:id="@+id/container_1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="5dp">

                <ImageButton
                    android:id="@+id/button_1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true"
                    android:background="@android:color/transparent"
                    android:clickable="false"
                    android:contentDescription="@null"
                    android:duplicateParentState="true"
                    android:padding="7dp"
                    android:scaleType="fitXY"/>

                <TextView
                    android:id="@+id/label_1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="0dp"
                    android:clickable="false"
                    android:gravity="center_horizontal"
                    android:text="@string/toolbar_button_title"
                    android:textColor="@color/white"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/container_2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="5dp">

                <ImageButton
                    android:id="@+id/button_2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true"
                    android:background="@android:color/transparent"
                    android:clickable="false"
                    android:contentDescription="@null"
                    android:duplicateParentState="true"
                    android:padding="7dp"
                    android:scaleType="fitXY" />

                <TextView
                    android:id="@+id/label_2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="0dp"
                    android:clickable="false"
                    android:gravity="center_horizontal"
                    android:text="@string/toolbar_button_title"
                    android:textColor="@color/white"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/container_3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="5dp">

                <ImageButton
                    android:id="@+id/button_3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true"
                    android:background="@android:color/transparent"
                    android:clickable="false"
                    android:contentDescription="@null"
                    android:duplicateParentState="true"
                    android:padding="7dp"
                    android:scaleType="fitXY" />

                <TextView
                    android:id="@+id/label_3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="0dp"
                    android:clickable="false"
                    android:gravity="center_horizontal"
                    android:text="@string/toolbar_button_title"
                    android:textColor="@color/white"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/container_4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="5dp">

                <ImageButton
                    android:id="@+id/button_4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true"
                    android:background="@android:color/transparent"
                    android:clickable="false"
                    android:contentDescription="@null"
                    android:duplicateParentState="true"
                    android:padding="7dp"
                    android:scaleType="fitXY" />

                <TextView
                    android:id="@+id/label_4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="0dp"
                    android:clickable="false"
                    android:gravity="center_horizontal"
                    android:text="@string/toolbar_button_title"
                    android:textColor="@color/white"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/notifications_container"
            android:layout_width="match_parent"
            android:layout_height="@dimen/notification_bar_height">

            <RelativeLayout
                android:id="@+id/beacons_info"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true">

                <ImageView
                    android:id="@+id/beacon_image"
                    android:layout_width="@dimen/beacons_icon_size"
                    android:layout_height="@dimen/beacons_icon_size"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    android:layout_toEndOf="@+id/explore"
                    android:layout_toRightOf="@+id/explore"
                    android:contentDescription="@null"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:src="@drawable/icon_explore"
                    android:tint="@color/white" />

                <TextView
                    android:id="@+id/beacon_counter"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignRight="@+id/beacon_image"
                    android:layout_alignTop="@id/beacon_image"
                    android:layout_margin="5dp"
                    android:background="@drawable/circle_shape_yellow"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="@string/zero"
                    android:textAlignment="center"
                    android:textColor="@android:color/white"
                    android:textSize="13sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/explore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/title_activity_beacons"
                    android:textColor="@color/white"
                    android:textSize="14sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/messages_container"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <ImageView
                    android:visibility="gone"
                    android:id="@+id/notifications_image"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="10dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/icon_messages"
                    android:tint="@android:color/white" />

                <TextView

                    android:id="@+id/notifications_counter"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/circle_shape_red"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="@string/zero"
                    android:textAlignment="center"
                    android:textColor="@android:color/white"
                    android:textSize="13sp"
                    android:visibility="gone" />

                <TextView
                    android:visibility="gone"
                    android:id="@+id/notifications"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_toRightOf="@+id/notifications_image"
                    android:text="@string/notifications"
                    android:textColor="@android:color/white"
                    android:textSize="14sp" />
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
